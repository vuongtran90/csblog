<div class="comments">
	<p class="commentName">
			<%= comment.name %>
	</p>
	<div class="commentContent">
		<p class="commentBody">
			<%= comment.body %>
		</p>
		<p class="commentTime">
			<%= time_ago_in_words(comment.created_at) %> ago
		</p>
	</div>
	<p><%= link_to 'Delete', [comment.post, comment],
	method: :delete,
	class: "button",
	data: {confirm: 'Are you sure?'} %></p>
</div>